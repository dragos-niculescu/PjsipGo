<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/parent">

    <LinearLayout
        android:id="@+id/layoutIncomingCall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewPeer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Peer URI"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textViewCallState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="early" />

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept" />

        <Button
            android:id="@+id/buttonHangup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hangup" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutOutCall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tvOutCallInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Call out"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutConnected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <SurfaceView
                android:id="@+id/svRemote"
                android:layout_width="0dp"
                android:layout_height="176dp"
                android:layout_weight="1" />

            <SurfaceView
                android:id="@+id/svLocal"
                android:layout_width="0dp"
                android:layout_height="176dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/svName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="57dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMuteMic"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/mute" />

            <ImageButton
                android:id="@+id/btnHangUp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/hangup"
                android:text="hangup" />

            <ImageButton
                android:id="@+id/btnSwitchCamera"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/switch_camera" />

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:id="@+id/buttonNum1"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="1" />

            <Button
                android:id="@+id/buttonNum2"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="1"
                android:text="2" />

            <Button
                android:id="@+id/buttonNum3"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="2"
                android:text="3" />

            <Button
                android:id="@+id/buttonNum4"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="4" />

            <Button
                android:id="@+id/buttonNum5"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="1"
                android:text="5" />

            <Button
                android:id="@+id/buttonNum6"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="2"
                android:text="6" />

            <Button
                android:id="@+id/buttonNum7"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="7" />

            <Button
                android:id="@+id/buttonNum8"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="1"
                android:text="8" />

            <Button
                android:id="@+id/buttonNum9"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="2"
                android:text="9" />


            <Button
                android:id="@+id/buttonNumSharp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="#" />

            <Button
                android:id="@+id/buttonNum0"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="3"
                android:layout_column="1"
                android:text="0" />

            <Button
                android:id="@+id/buttonNumStar"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_row="3"
                android:layout_column="2"
                android:text="*" />

        </GridLayout>

    </LinearLayout>
</LinearLayout>