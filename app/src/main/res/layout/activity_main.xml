<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etAccount"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="sip address"
            android:text="dragosn-200@pbxes.org" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="sip password"
            android:text="eim" />

        <EditText
            android:id="@+id/etServer"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="sip server"
            android:text="pbxes.org" />
<!--            android:text="301759.3D0F50.sip.newrocktech.com" />-->

        <EditText
            android:id="@+id/etPort"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="port"
            android:inputType="number"
            android:text="5060" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="login"
            android:text="Connect" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCallOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/etCallNumer"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="destination SIP"
            android:text="thetestcall@getonsip.com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:onClick="audioCall"
                android:text="audio call" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="videoCall"
                android:text="video" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>