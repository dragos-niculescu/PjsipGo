<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etAccount"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="sip账号"
            android:text="47076413" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="sip密码"
            android:text="123456" />

        <EditText
            android:id="@+id/etServer"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="sip服务器地址"
            android:text="192.168.2.243" />
<!--            android:text="301759.3D0F50.sip.newrocktech.com" />-->

        <EditText
            android:id="@+id/etPort"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="端口"
            android:inputType="number"
            android:text="5060" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="login"
            android:text="账户登录" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCallOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/etCallNumer"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="呼叫账号"
            android:text="1004" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:onClick="audioCall"
                android:text="语音呼叫" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="videoCall"
                android:text="视频呼叫" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>